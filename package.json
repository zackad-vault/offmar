{
  "name": "offmar",
  "longName": "Offline Manga Reader",
  "namespace": "https://github.com/zackad",
  "version": "0.6.0",
  "description": "Userscript for reading manga/view image locally in strip way.",
  "main": "ofmar.user.js",
  "runAt": "document-end",
  "grant": [],
  "include": [
    "file:///*"
  ],
  "exclude": [],
  "scripts": {
    "build": "webpack --mode production",
    "postbuild": "rm dist/index.html",
    "prebuild": "npm run tailwind:build --scripts-prepend-node-path",
    "prestart": "npm run tailwind:build --scripts-prepend-node-path",
    "start": "webpack-dev-server --mode development --hot",
    "tailwind:build": "tailwind build src/css/tailwind.src.css -o src/css/tailwind.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zackad/offmar.git"
  },
  "keywords": [
    "userscript",
    "manga",
    "reader"
  ],
  "author": "zackad",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zackad/offmar/issues"
  },
  "homepage": "https://github.com/zackad/offmar#readme",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "html-webpack-plugin": "^3.2.0",
    "tailwindcss": "^0.7.4",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "userscript-metadata": "^1.0.0",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "natsort": "^2.0.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0"
  }
}
